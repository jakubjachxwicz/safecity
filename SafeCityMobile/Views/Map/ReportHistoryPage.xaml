<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeCityMobile.Views.Map.ReportHistoryPage"
             BackgroundColor="{StaticResource AppBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Text="Historia zgłoszeń"
               BackgroundColor="{StaticResource TitleBackground}"
               FontSize="18"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               TextColor="{StaticResource White}"/>

        <CollectionView ItemsSource="{Binding Reports}"
                        Grid.Row="1"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedReport, Mode=TwoWay}"
                        SelectionChangedCommand="{Binding ReportSelectedCommand}"
                        SelectionChangedCommandParameter="{Binding SelectedReport}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10"
                           Padding="10"
                           BorderColor="{StaticResource LightButton}"
                           BackgroundColor="{StaticResource LightButton}"
                           CornerRadius="8">
                        <StackLayout>
                            <Label Text="{Binding FormattedCategory}" 
                                   FontSize="20" 
                                   TextColor="{StaticResource White}"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding ReportedAt}" 
                                   FontSize="16"
                                   TextColor="{StaticResource White}"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <VerticalStackLayout Grid.Row="2"
                             Spacing="12"
                             VerticalOptions="End"
                             Margin="0, 0, 0, 12">
            <Label Text="{Binding InfoText}"
                   VerticalTextAlignment="Start"
                   HorizontalTextAlignment="Center"
                   TextColor="{StaticResource CoolRed}"/>

            <Button Text="Powrót"
                    Margin="8"
                    BackgroundColor="{StaticResource DarkButton}"
                    Command="{Binding ReturnCommand}"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>